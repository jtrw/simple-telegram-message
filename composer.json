{
    "name": "jtrw/simple-telegram-message",
    "type": "library",
    "description": "Simple Telegram Messages",
    "keywords": [
        "nilBora",
        "Telegram",
        "Messages"
    ],
    "homepage": "https://github.com/jtrw/simple-telegram-message",
    "license": "MIT",
    "authors": [
        {
            "name": "Nil",
            "email": "brdnlsrg@gmail.com",
            "homepage": "https://github.com/jtrw",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.4"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Jtrw\\SimpleTelegram\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jtrw\\SimpleTelegram\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "config": {
        "sort-packages": true
    }
}
